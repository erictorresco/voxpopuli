{% extends "base.twig" %}

{% block content %}
	<div class="max-w-7xl mx-auto mt-4 lg:flex">
		<article class="">
			<section class="flex flex-col justify-center items-center ">
				<div class="max-w-7xl">
					<h1 class="p-2 text-3xl lg:text-5xl text-gray-700 font-semibold">{{ post.title }}</h1>
					<div class="mt-2 ml-2">
						<div class="flex items-center space-x-2">
							<img class="w-16 h-16 lg:w-20 lg:h-20 rounded-full ring-2 ring-gray-100" src="{{post.author.avatar.src}}" alt="">
							<div>
								<span>Por</span>
								<a href="{{post.author.path}}">
									{{ post.author.name }}
								</a>
								<span>&bull;</span>
								<time class="capitalize" datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time>
							</div>
						</div>
					</div>
				</div>
			</section>
			<div class="flex justify-center">
				<div class="prose lg:prose-xl items-center">
					<div class="content">
						<div class="items-start mt-3">
							{% include "partial/sharebox_posts.twig" with {'link': post.link, 'title': post.title} %}
						</div>
						{{post.content}}
						<div class="items-start mt-3">
							{% include "partial/sharebox_posts.twig" with {'link': post.link, 'title': post.title} %}
						</div>
					</div>
				</div>
			</div>
		</article>
	</div>
	<!-- /content-wrapper -->
{% endblock %}
